          <CategoryAxis side="BOTTOM" fx:id="xAxisConsultaSemana" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </BarChart>
      <LineChart fx:id="lineChartFaturamentoMeses" title="Faturamento por meses" GridPane.rowIndex="1">
        <xAxis>
          <CategoryAxis side="BOTTOM" fx:id="xAxisFaturamentoMeses" />
        </xAxis>
        <yAxis>
          <NumberAxis side="LEFT" />
        </yAxis>
         <GridPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </GridPane.margin>
      </LineChart>
